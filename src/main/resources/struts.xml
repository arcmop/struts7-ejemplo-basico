<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>

    <package name="landing" extends="struts-default">
        
        <default-action-ref name="index" />

        <action name="index" class="local.unp.desarrolloweb2.tienda.action.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="sumar" class="local.unp.desarrolloweb2.tienda.action.IndexAction" method="sumar">
            <result name="input">/WEB-INF/jsp/index.jsp</result>
            <result name="success">/WEB-INF/jsp/index.jsp</result>
        </action>
    </package>

</struts>

